{% extends 'base.html.twig' %}

{% block title %}Hello welcome to your BB selection!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

	<div class="container mt-4"></h1>Available Bbs</h1>
	<div class="row">
		{% for HolidayHome in BBs %}
			<div class="col-md-4 mt-3">
				<div class="card" >
					<img src="{{vich_uploader_asset( HolidayHome ,"imageFile")}}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{HolidayHome.name}}</h5>
						<p class="card-text">{{HolidayHome.description}}</p>
						<a href="{{path ('Bb.show',{'id': HolidayHome.id})}}" class="btn btn-primary">Click to your bed and Breakfast</a>
					</div>
				</div>
			</div>
            {% endfor %}
{% endblock %}
